<h1> Edit Cliff </h1>
<%= button_to "Delete #{@cliff.name}", @cliff, :method => :delete, :confirm => "Are you sure?", :title => "Delete #{@cliff.name}" %> 
<%= form_for(@cliff) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>	
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div
	<div class="actions">
		<%= f.submit "Update Client" %>
	</div>
<% end %> 
