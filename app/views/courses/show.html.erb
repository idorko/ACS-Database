
<h1> Course Viewer </h1>
<b>Course Date: </b><%= @course.date %> <br />
<b>Course Time: </b><%= @course.time %> <br />
<b>Course Type: </b><%= @course.course_type %> <br />
<b>Client Experience: </b><%= @course.experience %> <br />
<br />
<table>
<tr> 
	<td>	
		<b>Clients</b>
		<ul class="clients">
		<% @course.clients.each do |client| %>
			<li> <%= link_to client.first_name+" "+client.last_name, client%></li>
		<% end %>
	</ul>
	</td>
	<td>
		<b>Guides:</b>
			<ul class="clients">
				<% @course.guides.each do |guide| %>
					<li> <%= link_to guide.first_name+" "+guide.last_name, guide %></li>
				<% end %>
			</ul>
	</td>
</tr>
</table>
<%= link_to "Edit Course", edit_course_path(@course) %>
