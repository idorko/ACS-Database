<h1> Add New Course </h1>

<%= form_for(@course) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>	
	<div class="field">
		<%= f.label 'Number of Clients' %><br />
		<%= f.text_field :num_clients %>
	</div>	
	<div class="field">
		<%= f.label 'Guides' %><br />
		<%= f.collection_select "guides", "courses", @guides, "id", {}, {:multiple => true} %>
	</div>
	<div class="field">
		<%= f.label :experience %><br />
		<%= f.number_field :experience %>
	</div>
	<div class="field">
		<%= f.label 'Course Type' %><br />
		<%= f.text_field :type %>
	</div>
	<div class="field">
		<%= f.label :date %><br />
		<%= f.text_field :date %>
	</div>
	<div class="field">
		<%= f.label :time %><br />
		<%= f.text_field :time %>
	</div>
	<div class="field">
		<%= f.label :contact %><br />
		<%= f.text_field :contact %>
	</div>
	<div class="actions">
		<%= f.submit "Add Course" %>
	</div>
<% end %> 
