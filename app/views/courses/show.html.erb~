
<h1> Course Viewer </h1>
<b>Course Date: </b><%= @course.date %> <br />
<b>Course Time: </b><%= @course.time %> <br />
<b>Course Type: </b><%= @course.course_type %> <br />
<br />
<table>
<tr> 
	<td>	
		<b>Clients</b>
		<ul class="clients">
		<% @course.clients.each do |client| %>
			<li> <%= link_to client.name, client%></li>
		<% end %>
	</ul>
	</td>
	<td>
		<b>Guides:</b>
			<ul class="clients">
				<% @course.guides.each do |guide| %>
					<li> <%= link_to guide.name, guide %></li>
				<% end %>
			</ul>
	</td>
</tr>
<tr>
	<td>
		<%= form_for(@course, :action => 'update') do |f| %>

			<div class ="field">			
			<%= f.collection_select(:num_clients, @clients, :id , :name, {:prompt => "Select a Client"} ) %>
			</div>	

			<div class="actions">
				<%= f.submit "Add Client" %>
			</div>
		<% end %>
		
	</td>
	<td>
		<%= form_for(@course, :action => 'update') do |f| %>

				<div class="field">
					<%= f.collection_select(:num_guides, @guides, :id , :name, {:prompt => "Select a Guide"} ) %>
				</div>

				<div class="actions">
					<%= f.submit "Add Guide" %>
				</div>
			<% end %>
	</td>
</tr>
</table>
<%= link_to "Edit Course", edit_course_path(@course) %>
